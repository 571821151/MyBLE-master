<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOfMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/backOfMain"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/backOfMain"
                android:drawableLeft="@mipmap/back_to_main"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:text="@string/controlCenter"
                android:textColor="@color/controlCenterColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.clj.blesample.View.MainBoard
                android:id="@+id/img_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:drawableStart="@mipmap/bluetooth"
            android:gravity="center"
            android:text="@string/blueToothConnected"
            android:textSize="13sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="3"></FrameLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="bottom"
        android:background="@color/backOfMain"
        android:orientation="horizontal"
        android:paddingLeft="18.5dp"
        android:paddingTop="15dp"
        android:paddingRight="18.5dp"
        android:paddingBottom="18.5dp">

        <LinearLayout
            android:id="@+id/btn_control_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:background="@mipmap/brown_back"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/view_left"
                    android:layout_width="30dp"
                    android:layout_gravity="bottom"
                    android:layout_height="30dp"
                    android:src="@mipmap/control_w" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:layout_weight="33.5"
                android:gravity="center_vertical|center"
                android:text="@string/control_left"
                android:textColor="#ffc0c0c0"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_control_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:background="@mipmap/white_back"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_gravity="center">
            <ImageView
                android:id="@+id/view_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/mode_g" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="33.5"
                android:gravity="center_vertical|center"
                android:text="@string/control_right"
                android:textColor="#ffc0c0c0"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
