<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOfMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@color/backOfMain"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/backOfMain"
            android:gravity="center"
            android:text="@string/controlCenter"
            android:textColor="@color/controlCenterColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/fragment_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="0dp"
            android:background="@mipmap/logo"></FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:drawableStart="@mipmap/bluetooth"
            android:drawableLeft="@mipmap/bluetooth"
            android:gravity="center"
            android:text="@string/blueToothConnected"
            android:textSize="13sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="2"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/backOfMain"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_control_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.5dp"
            android:layout_marginStart="18.5dp"
            android:layout_marginTop="21.5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="21.5dp"
            android:background="@mipmap/btn_left" />

        <Button
            android:id="@+id/btn_control_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.5dp"
            android:layout_marginRight="18.5dp"
            android:layout_marginBottom="21.5dp"
            android:layout_weight="1"
            android:background="@mipmap/btn_right" />
    </LinearLayout>
</LinearLayout>
