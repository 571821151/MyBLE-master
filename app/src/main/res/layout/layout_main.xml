<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backOfMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/backOfMain"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/backOfMain"
            android:gravity="center"
            android:text="@string/controlCenter"
            android:textColor="@color/controlCenterColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <com.clj.blesample.View.LeftBoard
                android:id="@+id/image_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/image_mid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@mipmap/logo2"
                android:contentDescription="TODO" />

            <com.clj.blesample.View.PaintBoard
                android:id="@+id/img_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.8" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:drawableStart="@mipmap/bluetooth"
            android:drawableLeft="@mipmap/bluetooth"
            android:gravity="center"
            android:text="@string/blueToothConnected"
            android:textSize="13sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="3"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/backOfMain"
        android:orientation="horizontal"
        android:paddingLeft="18.5dp"
        android:paddingTop="15dp"
        android:paddingRight="18.5dp"
        android:paddingBottom="18.5dp">

        <Button
            android:id="@+id/btn_control_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:background="@mipmap/btn_left" />

        <Button
            android:id="@+id/btn_control_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_weight="1"
            android:background="@mipmap/btn_right" />
    </LinearLayout>
</LinearLayout>
